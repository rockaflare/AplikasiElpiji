<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Siapel.UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:wpfui="clr-namespace:WPFUI.Controls;assembly=WPFUI"
		xmlns:pages="clr-namespace:Siapel.UI.Views"
        mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="450"
        x:Class="Siapel.UI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Siapel.UI">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Row="1" Margin="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<wpfui:NavigationStore
				x:Name="RootNavigation"
				Grid.Column="0"
				Margin="6 0 6 0"
				Frame="{Binding ElementName=RootFrame}">
				<wpfui:NavigationStore.Items>
					<wpfui:NavigationItem Content="Dashboard" Icon="Home24" Tag="dashboard"/>
				</wpfui:NavigationStore.Items>
			</wpfui:NavigationStore>
		</Grid>

		<wpfui:TitleBar
		  Title="My New App"
		  Grid.Row="0"/>
	</Grid>

</Window>
